@model Project
@{
    ViewData["Title"] = "Yeni Proje Oluştur";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">

    <div class="form-group">
        <label>Proje Görsel Url</label>
        <input type="text" class="form-control" asp-for="ImageUrl" />
        <span class="text-danger" asp></span>
    </div>

    <div class="form-group">
        <label>Proje Adı</label>
        <input type="text" class="form-control" asp-for="ProjectName" />
    </div>

    <div class="form-group">
        <label>Proje Açıklaması</label>
       <input type="text" class="form-control" asp-for="Description" />
    </div>

    <div class="form-group">
        <label>Github Url</label>
        <input type="text" class="form-control" asp-for="GithubUrl" />
    </div>

    <div class="form-group">
        <label>Kategori</label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.categories">
        <option disabled selected>Kategori Seçiniz</option>
        </select>
    </div>
    <button class="btn btn-outline-primary">Kaydet</button>


</form>
