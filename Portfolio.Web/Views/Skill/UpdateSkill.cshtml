@model Skill
@{
    ViewData["Title"] = "Yeteneklerim Güncelle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">

    <input type="hidden" asp-for="SkillId" />

    <div class="form-group">
        <label>Başlık</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>

    <div class="form-group">
        <label>Seviye</label>
        <input type="text" class="form-control" asp-for="Percentage" />
    </div>

    <button class="btn btn-outline-primary">Güncelle</button>

</form>