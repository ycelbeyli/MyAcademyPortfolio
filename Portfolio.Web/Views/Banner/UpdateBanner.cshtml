@model Banner
@{
    ViewData["Title"] = "Ana Sayfa Banner Güncelle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="BannerId" />

    <div class="form-group">
        <label>Resim URl</label>
        <input type="text" class="form-control" asp-for="CoverImageUrl" />
    </div>

    <div class="form-group">
        <label>Ad Soyad</label>
        <input type="text" class="form-control" asp-for="NameSurname" />
    </div>

    <div class="form-group">
        <label>Başlık</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>

    <button class="btn btn-outline-primary">Güncelle</button>

</form>