@model List<About>

@{
    ViewData["Title"] = "Hakkımda Alanı";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Ünvan</th>
        <th>Açıklama</th>
        <th>Doğum Tarihi</th>
        <th>Web Site</th>
        <th>Telefon</th>
        <th>Şehir</th>
        <th>Mezuniyet</th>
        <th>E-Mail</th>
        <th>İşlemler</th>
   
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:75px;width:75px" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Birthdate</td>
            <td>@item.WebSite</td>
            <td>@item.PhoneNumber</td>
            <td>@item.City</td>
            <td>@item.Graduation</td>
            <td>@item.Email</td>
 
 @*            <td>@item.IsAvailable</td> *@
            <td>
                <a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">Sil</a>
                <br />
                <br />
                
               
                <a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }

</table>

<a href="/About/CreateAbout/" class="btn btn-outline-primary">Hakkımda Alanı Ekle</a>