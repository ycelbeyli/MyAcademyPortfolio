@model Portfolio.Web.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Parola Değiştir";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Parola Değiştir</h2>

@if (ViewBag.Success != null)
{
    <div class="alert alert-success">
        @ViewBag.Success
    </div>
}

<form asp-action="ChangePassword" method="post">
    <div class="mb-3">
        <label for="OldPassword" class="form-label">Mevcut Şifre</label>
        <input asp-for="OldPassword" type="password" class="form-control" id="OldPassword" />
        <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="NewPassword" class="form-label">Yeni Şifre</label>
        <input asp-for="NewPassword" type="password" class="form-control" id="NewPassword" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="ConfirmPassword" class="form-label">Yeni Şifre (Tekrar)</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Şifreyi Güncelle</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
